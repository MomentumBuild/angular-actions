form#petitionForm(ng-submit="pf.create()")
	.form-group
		input.form-control(type="text" ng-model="pf.newpetition.first_name" ng-required="true" placeholder="First Name")
	.form-group
		textarea.form-control(ng-model="pf.newpetition.message" ng-required="true" placeholder="Message")
	button.btn.btn-success.btn-block.btn-lg Sign Petition